                    <li role="presentation"><a href="/">home </a></li>
                    <li role="presentation"><a href="/posts">대타구하기 </a></li>
                    <% if user_signed_in? %>
                      <li role="presentation"><a href="/users/<%= current_user.id%>">My Page </a></li>
                    <% else %>
                    <%end%>
                    
                    
                </ul>
                
                
                <p class="navbar-text navbar-right actions"> 
                
                <% if user_signed_in?%>
                  <a href="" class:"navbar-link login"><%= current_user.name%></a>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <%=link_to '로그아웃' , logout_path,method:'delete',class:"btn btn-default action-button"%>
                  <%=flash[:alert]%>
                <%else%>
                  <%=link_to '로그인',login_path,class:"navbar-link login"%>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <%=link_to '회원가입',new_user_path,class:"btn btn-default action-button"%>
                <%end%>
            
             </p>
            
            
                
            </div>
        </div>
    </nav>
